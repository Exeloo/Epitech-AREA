{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "tests/coverage/unit",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "testTimeout": 5000,
  "moduleNameMapper": {
    "^@App/(.*)$": "<rootDir>/src/$1",
    "^lib/(.*)$": "<rootDir>/common/$1",
    "^~/(.*)$": "<rootDir>/src/$1",
    "^@type/(.*)$": "<rootDir>/src/common/types/$1",
    "^@utils/(.*)$": "<rootDir>/src/common/utils/$1",
    "^@exception$": "<rootDir>/src/common/exception",
    "^@domain/(.*)$": "<rootDir>/src/domain/$1",
    "^@d-type/(.*)$": "<rootDir>/src/domain/common/types/$1"
  }
}
