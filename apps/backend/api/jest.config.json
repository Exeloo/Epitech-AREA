{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "tests/coverage/unit",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "testTimeout": 5000,
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/$1",
    "^@type/(.*)$": "<rootDir>/common/types/$1",
    "^@utils/(.*)$": "<rootDir>/common/utils/$1",
    "^@exception$": "<rootDir>/common/exception",
    "^@domain/(.*)$": "<rootDir>/domain/$1",
    "^@d-type/(.*)$": "<rootDir>/domain/common/types/$1"
  }
}
