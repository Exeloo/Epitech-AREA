{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "tests",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "coverage/e2e",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "testTimeout": 5000
}
